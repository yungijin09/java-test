import java.util.Scanner;

public class Dollar {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int won;
        System.out.print("원화를 입력하세요(단위:원) : ");
        won = sc.nextInt();
        double dollar = (double)won / 1260.0;
        System.out.printf("%d원은 $%.2f입니다.", won, dollar);
    }
}
